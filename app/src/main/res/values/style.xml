<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="SplashScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

    <item name="colorPrimary">@color/design_default_color_primary</item>
    <item name="colorPrimaryDark">@color/material_dynamic_primary20</item>
    <item name="colorAccent">@color/design_default_color_background</item>
</style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_bg</item>
    </style>


    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="toolbartext" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="interviewReminder.toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="theme">@style/Theme.InterViewReminderApp</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/toolbartext</item>
    </style>
</resources>